<h1>Comments</h1>

<div class="row">
  <div class="col-md-12">

    <div class="row">
      <div class="col-md-8">

        <%= form_for [@post, @comment], method: :post do |f| %>
          <div class="form-group">
            <!-- <%= f.text_field :text, class: "form-control" %> -->
            <%= f.text_field :text, class: "form-control", placeholder: "Comment here...", rows: 5 %>
          </div>

          <div class="form-group">
            <%= f.submit "Add Comment", class: "btn btn-default" %>
          </div>
        <% end %>

      </div>
    </div>

  </div>
</div>
<% @comments.each do |c| %>
  <%= c.text %>
<% end %>
