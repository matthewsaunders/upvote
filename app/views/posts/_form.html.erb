<div class="row up-content">
  <div class="col-md-8">

    <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :link %>
        <%= f.text_field :link, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Submit", class: "btn btn-default" %>
      </div>
    <% end %>

  </div>
</div>
