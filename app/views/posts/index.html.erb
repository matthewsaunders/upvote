<div class="row up-content">
  <div class="col-md-12">
    <table>
      <% @posts.each_with_index do |post, index| %>
        <div class="post">
          <p>
            <%= index + 1 %>.
            <%= post.title %>
            <% if !post.host.blank? %>
              <span class="external-link">(<%= post.host %>)</span>
            <% end %>
          </p>
        </div>
      <% end %>
    </table>
  </div>
</div>
