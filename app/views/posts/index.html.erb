<div class="row up-content">
  <div class="col-md-12">
    <table>
      <% @posts.each_with_index do |post, index| %>
        <tr>
          <td><%= index + 1 %>.</td>
          <td><%= post.title %></td>
          <td><%= post.link %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
